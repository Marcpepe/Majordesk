					<h3 class="text-grey">Exemple d'exercice</h3>
				  </div>
				</div>
				<div class="item">
				  <img src="{{ asset('img/home/caroussel/5.jpg') }}">
				  <div class="carousel-caption">
					<h3 class="text-grey">Exemple d'exercice</h3>
				  </div>
				</div>
				<div class="item">
				  <img src="{{ asset('img/home/caroussel/6.jpg') }}">
				  <div class="carousel-caption">
					<h3 class="text-grey">Résumé de cours</h3>
				  </div>
				</div>
				<div class="item">
				  <img src="{{ asset('img/home/caroussel/7.jpg') }}">
				  <div class="carousel-caption">
					<h3 class="text-grey">Fiche de cours</h3>
				  </div>
				</div>
			  </div>

