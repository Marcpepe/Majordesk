{% extends "::layout.html.twig" %}

{% block title %}
	Recommandez-nous - {{ parent() }}
{% endblock %}

{% block body %}
	
	<br><br><span class="hidden-lg"><br></span>
	
		<br><br>
		{% if app.session.flashbag.get('info') %}
		<div class="alert alert-info">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 text-center font-size-26">	
				<strong> Merci :)</strong> <span class="hiddex-xs">Le message a bien été envoyé !</span>
			</div>
			<div class="clearfix"></div>
		</div>	
		{% endif %}
	
	<form method="post" action="{{ path('majordesk_app_recommandez_nous') }}">
		
		<div class="col-lg-12">
			<h3><i class="icon-thumbs-up text-emerald"></i> Envoyer une recommandation à un(e) ami(e)</h3><br>
			<div class="row">
				<div class="col-lg-6">
					{{ form_widget(form.destinataire) }}
				</div>
			</div>
			<div class="clearfix"></div><br>
			<div class="row">
				<div class="col-lg-12">
					{{ form_widget(form.corps) }}
				</div>
			</div>
			<div class="clearfix"></div><br>
			<div class="row">
				<div class="col-lg-12">
					<button type="submit" class="btn btn-purple pull-right"><i class="icon-ok"></i> Envoyer</button>
				</div>
			</div>
		</div>

	{{ form_widget(form._token) }}
	</form>
	<span class="visible-xs"><br></span>
	

{% endblock %}