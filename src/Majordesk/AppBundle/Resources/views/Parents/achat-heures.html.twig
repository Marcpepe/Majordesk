{% extends "::layout.html.twig" %}

{% block title %}
	Achat d'heures - {{ parent() }}
{% endblock %}

{% block body %}
<span class="visible-md"><br><br></span>
<span class="visible-lg"><br><br></span>

	{% if famille.isAllowedNewHours is empty %}
	
		<div class="col-lg-12">
			<h3>Informations</h3>
			Quelques informations concernant le rechargement de votre compte :
			<ul>
				<li>Le prix de l'heure de cours est de 59,90 € (29,95€ après impôts) quel que soit le pack acheté;</li>
				<li>Les heures achetées ont une durée de validité de 18 mois;</li>
				<li>Les heures achetées ne sont pas remboursables, sauf cas de force majeure.</li>
			</ul>
		</div>
		
		<br>
		<div class="col-lg-12">
			<h3>Tarifs des packs</h3>
		</div>
		<div class="clearfix"></div>
		<div class="table-reponsive">
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Pack 10h</th>
						<th>Pack 30h</th>
						<th>Pack 50h</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td><i class="icon-tag icon-large text-orange"></i> <strong>Prix</strong></td>
						<td>599,00 €</td>
						<td>1797,00 €</td>
						<td>2995,00 €</td>
					</tr>
					<tr>
						<td><i class="icon-tag icon-large text-emerald"></i> <strong>Prix après impôts</strong></td>
						<td>299,50 €</td>
						<td>898,50 €</td>
						<td>1447,50 €</td>
					</tr>
					<tr>
						<td></td>
						<td><a href="{{ path('majordesk_app_achat_en_cours', { 'pack' : 1 }) }}" class="btn btn-success">Acheter</a></td>
						<td><a href="{{ path('majordesk_app_achat_en_cours', { 'pack' : 2 }) }}" class="btn btn-success">Acheter</a></td>
						<td class="text-pomegranate">Bientôt disponible</td>
					</tr>
				</tbody>
			</table>
		</div>
	
		<br>
		
	{% else %}
		
			<div class="col-lg-12">
				<h3>Vous n'êtes pas autorisés dans cette section</h3>
				<br><em>{{ famille.isAllowedNewHours }}</em>
			</div>

	{% endif %}

{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}